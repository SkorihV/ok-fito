.about
  &__section
    display flex
    justify-content space-between
    align-items start
    margin em(100) 0 em(100)
  &__right-side
    max-width 50%
    width 100%
  &__left-side
    max-width 50%
    width 100%
  &__text
    &-wrapper
      display flex
      flex-direction column
      align-items start
      margin 0 auto
      position relative
      max-width: em(620);

    &-label
      font-size 3.75em
      font-weight 400
      max-width 580px

    &-quote
      font-size em(20)
      line-height em(30)
      color: #658961;
      position relative
      margin em(50) 0
      padding-left em(120)
      &::before
        content ''
        width em(75)
        height em(60)
        background-image url("../img/about/quote.png")
        background-repeat no-repeat
        background-size contain
        position absolute
        top -30px
        left 0
    &-content
      font-size em(18)
      line-height em(27)

  &__images
    &-wrapper
      position relative
      margin-top em(50)
  &__images-big
    max-width em(960)
    object-fit contain
    width 100%
    &:hover
      cursor pointer
    img
      object-fit contain
      width 100%

  &__images-small
    display block
    object-fit contain
    width 100%
    max-width em(425)
    position absolute
    top em(-40)
    left em(-75)
    img
      object-fit contain
      width 100%