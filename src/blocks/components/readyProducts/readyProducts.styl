.ready-products
  display flex
  flex-direction column
  align-items center
  justify-content flex-start
  margin-bottom em(90)
  &__label
    font-size em(60)
    line-height em(60 / 3.75)
    margin-bottom em(40 / 3.75)
    &-second
      font-size em(20)
      line-height em(30 / 1.25)
      margin-bottom em(50 / 1.25)
      max-width em(1000 / 1.25)
      text-align center
  &__list
    &-wrapper
      display flex
      flex-wrap wrap
      justify-content space-between
      max-width em(1520)
      width 100%
    &-item
      width em(358)
      overflow hidden
      cursor pointer
      display flex
      flex-direction column
      align-items center
      &-image
        object-fit contain
        width 100%
        height auto
        &-wrapper
          width em(358)
          height em(358)
          position relative
          &:hover
            .ready-products__list-item-button-wrapper
              display flex
      &-button
        border em(2) solid color-white
        &:hover
          background-color #64A060
        &-wrapper
          top 0
          right 0
          left 0
          bottom 0
          align-items center
          flex-direction column
          position absolute
          justify-content center
          background rgba(0, 0, 0, 0.5)
          display none
      &-label
        font-size em(24)
        line-height em(24 / 1.5)
        font-weight 500
      &-cost
        font-weight 700
        font-size em(36)
        line-height em(36)
        color rgba(100, 160, 96, 1)
