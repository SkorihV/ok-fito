.about-second
  display flex
  &__left-side
    max-width 50%
    width 100%
  &__right-side
    max-width 50%
    width 100%
    display flex
    justify-content center

  &__slider
    &-wrapper

    &-item

    &-img
      width 100%
      object-fit contain
  &__content
    &-wrapper
      max-width em(620)
      width 100%
    &-first
      font-size em(18)
      line-height em(27)
    &-label
      font-size em(40)
      line-height em(40 / 2.5)
      margin: em(70/2.5) 0
      position relative
      padding-left em(100 / 2.5)
      &::before
        content ''
        position absolute
        height em(1 / 2.5)
        width em(65 / 2.5)
        background-color black
        top 50%
        transform translateY(-50%)
        left 0
    &-second
      font-size em(18)
      line-height em(27)