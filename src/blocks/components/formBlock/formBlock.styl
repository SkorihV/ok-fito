.form-block
    &__wrapper
      max-width em(1920)
      width 100%
      height em(690)
      background-repeat no-repeat
      background-position center center
      background-size cover
      background-image url("../../../img/formBlock/image-form.png")
      display flex
      flex-direction column
      align-items center
      justify-content center
      box-shadow 0 em(4) em(4) rgba(0, 0, 0, 0.25)
    &__label
      color color-white
      font-weight 700
      font-size em(40)
      line-height em(52 / 2.5)
      max-width em(925 / 2.5)
      text-align center
      margin-bottom em(45 / 1.5)
      &-second
        color color-white
        font-weight 600
        font-size em(24)
        line-height em(36 / 1.5)
        text-align center
        margin-bottom em(30 / 1.5)
    &__field
      &-wrapper
        max-width em(830)
        display flex
        flex-wrap wrap
        justify-content center
        gap em(30)
      &-item
        max-width em(480)
      &-button
        background-color #64A060
        &:hover
          background-color #40763D